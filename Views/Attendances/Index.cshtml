@model IEnumerable<CheckIn.Models.Attendance>

@{
    ViewData["Title"] = "Índice";
}



<div class="text-center">
    <h1>Asistencias</h1>
    <div class="container-clock">
        <h1 id="time">00:00:00</h1>
        <p id="date">date</p>
    </div>
</div>
<form asp-controller="Attendances" asp-action="Index">
    <div class="text-center">
        Fecha Inicio : <input type="date" name="start" />
        Fecha Final: <input type="date" name="end" />
        <input type="submit" value="Buscar entre fechas" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exit)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entrance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exit)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary text-white" asp-action="Create">Registrar Entrada/Salida</a>
</div>
